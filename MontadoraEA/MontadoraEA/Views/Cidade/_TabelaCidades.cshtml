@model IEnumerable<MontadoraEA.Models.Cidade>
<br />
<table id="tabelaId" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th scope="col">
                <header class="text-center">Ações</header>
            </th>
        </tr>
    <thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    <div class="float-right">
                        <button class="btn btn-outline-info visualizar" data-id="@item.CidadeId"> Visualizar </button>
                        <button class="btn btn-outline-warning editar" data-id="@item.CidadeId"> Editar </button>
                        <button class="btn btn-outline-danger excluir" data-id="@item.CidadeId"> Excluir </button>
                        @*@Html.ActionLink("Visualizar", "Visualizar", null, new { id = item.CidadeId }, new { @class = "btn btn-outline-info" })
                        @Html.ActionLink("Editar", "Editar", null, new { id = item.CidadeId }, new { @class = "btn btn-outline-warning" })
                        @Html.ActionLink("Excluir", "Excluir", null, new { id = item.CidadeId }, new { @class = "btn btn-outline-danger", })*@
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>