@model MontadoraEA.Models.Cidade
@{
    Layout = null;
    ViewBag.Title = "Novo";
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

@*@using (Ajax.BeginForm("Novo", "Cidade", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "divmodal", OnSuccess = "OnSuccess", OnFailure = "OnFailure" }))*@
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cadastrar</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            </div>
            <div class="modal-body">
                <fieldset>
                    <div>
                        <b>@Html.LabelFor(Model => Model.Estado)</b>
                    </div>
                    <div>
                        @Html.EnumDropDownListFor(Model => Model.Estado, htmlAttributes: new { @class = "form-control", @selected = string.Empty, required = "required" })
                        @Html.ValidationMessageFor(Model => Model.Estado, "", new { @class = "text-danger" })
                    </div>

                    <div>
                        <b>@Html.LabelFor(Model => Model.Nome)</b>
                    </div>
                    <div>
                        @Html.EditorFor(Model => Model.Nome, new { htmlAttributes = new { @style = "text-transform:uppercase", @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(Model => Model.Nome, "", new { @class = "text-danger" })
                    </div>
                </fieldset>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-outline-primary">Salvar</button>
            </div>
        </div>
    </div>
}

