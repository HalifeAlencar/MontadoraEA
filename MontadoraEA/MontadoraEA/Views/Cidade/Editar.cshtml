@model MontadoraEA.Models.Cidade
<br />
@{
    Layout = null;
    ViewBag.title = "Editar";
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.CidadeId)
            <div class="modal-header">
                <h4 class="modal-title">Editar Cidade</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            </div>
            <div class="modal-body">

                <fieldset>
                    <legend>Editar</legend>
                    <div>
                        @Html.LabelFor(Model => Model.Estado)
                    </div>
                    <div>
                        @Html.EnumDropDownListFor(Model => Model.Estado, new { @class = "form-control" })
                        @Html.ValidationMessageFor(Model => Model.Estado)
                    </div>
                    <div>
                        @Html.LabelFor(Model => Model.Nome)
                    </div>
                    <div>
                        @Html.EditorFor(Model => Model.Nome, new { htmlAttributes = new { @style = "text-transform:uppercase", @class = "form-control" } })
                        @Html.ValidationMessageFor(Model => Model.Nome)
                    </div>
                </fieldset>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-outline-primary" data-id="@Model.CidadeId"> Salvar Alterações </button>
            </div>
        }
    </div>
</div>

