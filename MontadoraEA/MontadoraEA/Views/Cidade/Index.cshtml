@{
    ViewBag.Title = "Cidade";
}
<br />
<div class="form-row form-inline">

    @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-outline-secondary col-md-1" })
    <div class="col-md-auto"></div>
    @Html.ActionLink("Cadastrar Cidade", "Novo", null, new { @class = "btn btn-outline-primary col-md-2" })
    <div class="col-md-5"></div>
    <div class="col-md-auto">
        @using (Html.BeginForm())
        {
            @Html.TextBox("txtBusca", null, new { @class = "form-control col-auto" });
            <input type="submit" value="Pesquisar" class="btn btn-outline-dark col-auto" />
        }
    </div>
</div>


<div id="divcidades">
    @Html.Partial("_ListaCidades")
</div>
