@{
    ViewBag.Title = "Cidade";
}

@*<script src="https://code.jquery.com/jquery-3.3.1.js"></script>*@
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
@*<script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>*@
@*<script src="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"></script>*@
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">

<div class="modal fade" id="divmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
</div>
<br />
<div class="form-row form-inline">
    @Html.ActionLink("Voltar", "Index", "Home", null, new { @class = "btn btn-outline-secondary" })
    <button class="btn btn-outline-primary cadastrar"> Cadastrar </button>
</div>

<div id="divCidades">
    @Html.Partial("_ListaCidades")
</div>

@section scripts{
    <script>

        $(function () {
            $(".cadastrar").click(function () {
                $("#divmodal").load("Cidade/Novo", function () {
                    $("#divmodal").modal();
                })
            });
        })

        $(function () {
            $(".visualizar").click(function () {
                var id = $(this).attr("data-id");
                $("#divmodal").load("Cidade/Visualizar?id=" + id, function () {
                    $("#divmodal").modal();
                })
            });
        })

        $(function () {
            $(".editar").click(function () {
                var id = $(this).attr("data-id");
                $("#divmodal").load("Cidade/Editar?id=" + id, function () {
                    $("#divmodal").modal();
                })
            });
        })

        $(function () {
            $(".excluir").click(function () {
                var id = $(this).attr("data-id");
                $("#divmodal").load("Cidade/Excluir?id=" + id, function () {
                    $("#divmodal").modal();
                })
            });
        })

        $(document).ready(function () {
            $('#tabelacidade').dataTable({
                "language": {
                    "sEmptyTable": "Nenhum registro encontrado",
                    "sInfo": "Mostrando de _START_ até _END_ de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando 0 até 0 de 0 registros",
                    "sInfoFiltered": "(Filtrados de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sInfoThousands": ".",
                    "sLengthMenu": "_MENU_ resultados por página",
                    "sLoadingRecords": "Carregando...",
                    "sProcessing": "Processando...",
                    "sZeroRecords": "Nenhum registro encontrado",
                    "sSearch": "Pesquisar",
                    "oPaginate": {
                        "sNext": "Próximo",
                        "sPrevious": "Anterior",
                        "sFirst": "Primeiro",
                        "sLast": "Último"
                    },
                    "oAria": {
                        "sSortAscending": ": Ordenar colunas de forma ascendente",
                        "sSortDescending": ": Ordenar colunas de forma descendente"
                    }
                }
            });
        });

    </script>
}

