@model MontadoraEA.Models.Veiculo

@{
    Layout = null;
    ViewBag.title = "Editar";
}

@Scripts.Render("~/bundles/jqueryval")

@using (Html.BeginForm(new { @id = "formEditar" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.VeiculoId)
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Editar</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            </div>
            <div class="modal-body">
                <fieldset>
                    <div>
                        @Html.LabelFor(Model => Model.Modelo)
                    </div>
                    <div>
                        @Html.EditorFor(Model => Model.Modelo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(Model => Model.Modelo, "", new { @class = "text-danger" })
                    </div>

                    <div>
                        @Html.LabelFor(Model => Model.Marca)
                    </div>
                    <div>
                        @Html.EditorFor(Model => Model.Marca, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(Model => Model.Marca, "", new { @class = "text-danger" })
                    </div>

                    <div>
                        @Html.LabelFor(Model => Model.Categoria)
                    </div>
                    <div>
                        @Html.EditorFor(Model => Model.Categoria, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(Model => Model.Categoria, "", new { @class = "text-danger" })
                    </div>
                </fieldset>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-outline-primary"> Salvar Alterações </button>
            </div>
        </div>
    </div>
}
