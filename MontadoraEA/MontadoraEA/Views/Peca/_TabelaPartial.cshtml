@model IEnumerable <MontadoraEA.Models.Peca>

<table id="tabelaId" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.NumeroSerie)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th scope="col">
                <header class="text-center">Ações</header>
            </th>
        </tr>
    <thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <div class="float-right">
                    <button class="btn btn-outline-info visualizar" data-id="@item.PecaId"> Visualizar </button>
                    <button class="btn btn-outline-warning editar" data-id="@item.PecaId"> Editar </button>
                    <button class="btn btn-outline-danger excluir" data-id="@item.PecaId"> Excluir </button>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>